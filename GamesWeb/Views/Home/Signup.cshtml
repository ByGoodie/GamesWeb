<div class="section" id="main">
    <div class="container">
        @Html.ValidationSummary()
        <form asp-action="Signup" method="post" enctype="multipart/form-data">
            <div class="mt-3">
                <label asp-for="Name" class="form-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Password" class="form-label">Password:</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label for="repassword" class="form-label">Enter Password Again:</label>
                <input type="password" name="repassword" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="Email" class="form-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label for="pfp" class="form-label">Profile Picture:</label>
                <input type="file" name="pfp" class="form-control" />
            </div>
            @* <div class="d-none">
                <input asp-for="GameIds" class="form-control" value="" />
            </div>
            <div class="d-none">
                <input asp-for="MembershipIds" class="form-control" value="" />
            </div>
            <div class="d-none">
                <input asp-for="PfpName" class="form-control" value="" />
            </div> *@
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Sign Up</button>
                <button type="button" class="btn btn-danger" asp-action="Index">Cancel</button>
            </div>
        </form>
    </div>
</div>